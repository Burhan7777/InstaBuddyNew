<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/reelImageView"
        android:layout_width="130dp"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/profile_screen_background"
        android:scaleType="center"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/playIconReels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="@+id/reelImageView"
        app:layout_constraintStart_toStartOf="@+id/reelImageView" />

    <TextView
        android:id="@+id/noOfViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/instagram_sans_bold"
        android:text="This is the no of views"
        android:textColor="@color/text_color_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/reelImageView"
        app:layout_constraintStart_toEndOf="@+id/playIconReels" />

