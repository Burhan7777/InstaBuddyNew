<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/storyImageView"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/profile_screen_background"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/reelIconStories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/instagram_reels"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/storyImageView"
        app:layout_constraintTop_toTopOf="@+id/storyImageView" />

    <!-- <ImageView
         android:id="@+id/reelIcon"
         android:layout_width="wrap_content"
