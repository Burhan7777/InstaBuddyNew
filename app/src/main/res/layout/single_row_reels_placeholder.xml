<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/placeHolderReelsImageView1"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:background="@drawable/profile_screen_background"
        android:contentDescription="Imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/text_color_dark"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/placeHolderReelsImageView1"
        app:layout_constraintEnd_toEndOf="@+id/placeHolderReelsImageView1"
        app:layout_constraintStart_toStartOf="@+id/placeHolderReelsImageView1"
        app:layout_constraintTop_toTopOf="@+id/placeHolderReelsImageView1" />

    <ImageView
        android:id="@+id/placeHolderReelsImageView2"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:background="@drawable/profile_screen_background"
        android:contentDescription="Imageview"
        app:layout_constraintEnd_toStartOf="@+id/placeHolderReelsImageView3"
        app:layout_constraintStart_toEndOf="@+id/placeHolderReelsImageView1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/text_color_dark"
        app:layout_constraintBottom_toBottomOf="@+id/placeHolderReelsImageView2"
        app:layout_constraintEnd_toEndOf="@+id/placeHolderReelsImageView2"
        app:layout_constraintStart_toStartOf="@+id/placeHolderReelsImageView2"
        app:layout_constraintTop_toTopOf="@+id/placeHolderReelsImageView2" />

    <ImageView
        android:id="@+id/placeHolderReelsImageView3"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:background="@drawable/profile_screen_background"
        android:contentDescription="Imageview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/placeHolderReelsImageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/text_color_dark"
        app:layout_constraintBottom_toBottomOf="@+id/placeHolderReelsImageView3"
        app:layout_constraintEnd_toEndOf="@+id/placeHolderReelsImageView3"
        app:layout_constraintStart_toStartOf="@+id/placeHolderReelsImageView3"
        app:layout_constraintTop_toTopOf="@+id/placeHolderReelsImageView3" />

</androidx.constraintlayout.widget.ConstraintLayout>